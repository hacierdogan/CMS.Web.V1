@using CMS.Web.V1.Models.Helper
<section id="features">
    <div class="container">
        <div class="col-md-8 col-md-offset-2">
            <div class="heading">
                <h2>@(("Home.Tab.Title").toLanguage())</h2>
                <div class="line"></div>
                <p>
                    @(("Home.Tab.Description").toLanguage())
                </p>
            </div>
        </div>
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" ng-class="$index==0?'active':' '" ng-repeat="tab in tabList">
                <a href="#tab-{{tab.Id}}" role="tab" data-toggle="tab"><i ng-class="tab.TabButtonText"></i></a>
            </li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" id="tab-{{tabItem.Id}}" ng-class="$index==0?'tab-pane fade in active feat-sec':'tab-pane fade feat-sec'" ng-repeat="tabItem in tabList">
                <div class="col-md-6">
                    <h5 ng-bind-html="tabItem.Detail[0].Title"></h5>
                    <div class="line"></div>
                    <div class="clearfix"></div>
                    <div class="feat-sec" ng-bind-html="tabItem.Detail[0].Description"></div>
                </div>
                <div class="col-md-6">
                    <h5></h5>
                    <img ng-src="{{tabItem.PicturePath}}" class="img-responsive" alt="">
                </div>
            </div>
        </div>
    </div>
</section>
