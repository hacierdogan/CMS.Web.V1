@{
    ViewBag.Title = "Sosyal Medya";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-heading">
    <h1 class="page-title">Sabitler</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html"><i class="la la-home font-20"></i></a>
        </li>
        <li class="breadcrumb-item">Sosyal Medya</li>
    </ol>
</div>
<div class="page-content fade-in-up" ng-controller="socialMediaController">
    <div class="ibox ibox-primary">
        <div class="ibox-head">
            <div class="ibox-title">Sosyal Medya Listesi</div>
            <div class="ibox-tools">
                <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
            </div>
        </div>
        <div class="ibox-body">
            <form class="form-horizontal">
                <div class="form-group input-group">
                    <div class="input-group-addon"><i class="fa fa-facebook"></i></div>
                    <input class="form-control" type="text" placeholder="facebook url" ng-model="socialMedia.FacebookUrl">
                    <div class="input-group-addon">
                        <input type="checkbox" ng-model="socialMedia.IsFacebook" ng-checked="socialMedia.IsFacebook==true" title="Görünüm">
                    </div>
                    <a class="input-group-addon" href="{{socialMedia.FacebookUrl}}" target="_blank" title="Ziyaret Et"><i class="fa fa-link"></i></a>
                </div>

                <div class="form-group input-group">
                    <div class="input-group-addon"><i class="fa fa-twitter"></i></div>
                    <input class="form-control" type="text" placeholder="facebook url" ng-model="socialMedia.TwitterUrl">
                    <div class="input-group-addon">
                        <input type="checkbox" ng-model="socialMedia.IsTwitter" ng-checked="socialMedia.IsTwitter==true" title="Görünüm">
                    </div>
                    <a class="input-group-addon" href="{{socialMedia.TwitterUrl}}" target="_blank" title="Ziyaret Et"><i class="fa fa-link"></i></a>
                </div>

                <div class="form-group input-group">
                    <div class="input-group-addon"><i class="fa fa-youtube"></i></div>
                    <input class="form-control" type="text" placeholder="facebook url" ng-model="socialMedia.YoutubeUrl">
                    <div class="input-group-addon">
                        <input type="checkbox" ng-model="socialMedia.IsYoutube" ng-checked="socialMedia.IsYoutube==true" title="Görünüm">
                    </div>
                    <a class="input-group-addon" href="{{socialMedia.YoutubeUrl}}" target="_blank" title="Ziyaret Et"><i class="fa fa-link"></i></a>
                </div>

                <div class="form-group input-group">
                    <div class="input-group-addon"><i class="fa fa-linkedin"></i></div>
                    <input class="form-control" type="text" placeholder="facebook url" ng-model="socialMedia.LinkedinUrl">
                    <div class="input-group-addon">
                        <input type="checkbox" ng-model="socialMedia.IsLinkedin" ng-checked="socialMedia.IsLinkedin==true" title="Görünüm">
                    </div>
                    <a class="input-group-addon" href="{{socialMedia.LinkedinUrl}}" target="_blank" title="Ziyaret Et"><i class="fa fa-link"></i></a>
                </div>

                <div class="form-group input-group">
                    <div class="input-group-addon"><i class="fa fa-instagram"></i></div>
                    <input class="form-control" type="text" placeholder="facebook url" ng-model="socialMedia.InstagramUrl">
                    <div class="input-group-addon">
                        <input type="checkbox" ng-model="socialMedia.IsInstagram" ng-checked="socialMedia.IsInstagram==true" title="Görünüm">
                    </div>
                    <a class="input-group-addon" href="{{socialMedia.InstagramUrl}}" target="_blank"  title="Ziyaret Et"><i class="fa fa-link"></i></a>
                </div>

                <div class="form-group text-right">
                    <button type="button" class="btn btn-success" ng-click="saveSocialMedia()">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section PageLevelStyles{

}
@section PageLevelScripts
{
    <script src="~/Scripts/Admin/socialmedia.js?@HttpContext.Current.Application["JSVer"]" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {


        });

    </script>
}



