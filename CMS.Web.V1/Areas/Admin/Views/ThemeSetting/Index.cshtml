@{
    ViewBag.Title = "Tema Ayarları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-heading">
    <h1 class="page-title">Tema Ayarları</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html"><i class="la la-home font-20"></i></a>
        </li>
        <li class="breadcrumb-item">Tema Ayarları</li>
    </ol>
</div>
<div class="page-content fade-in-up" ng-controller="themeSettingController">
    <div class="ibox ibox-primary">
        <div class="ibox-head">
            <div class="ibox-title">Tema Ayarları</div>
            <div class="ibox-tools">
                <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
            </div>
        </div>
        <div class="ibox-body">
            <div class="form-horizontal row">
                <div class="col-sm-12">

                    <div class="form-group row">
                        <label class="col-sm-3" for="LangCode">Bakım Modu</label>
                        <div class="col-sm-9">
                            <div class="checkbox">
                                <label class="chkswitch">
                                    <input type="checkbox" id="Status" name="Status" ng-model="themeSetting.Maintenance">
                                    <span class="swtslider round"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3">Başlangıç Dili</label>
                        <div class="col-sm-9">
                            <select class="form-control" ng-model="themeSetting.DefaultLanguage">
                                <option ng-repeat="lang in languageList" value="{{lang.LangCode}}">{{lang.LangName}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3">Dil Seçimi</label>
                        <div class="col-sm-9">
                            <select class="form-control" ng-model="themeSetting.LanguageType">
                                <option  value="name">Dil ismini göster</option>
                                <option  value="code">Dil kodunu göster</option>
                                <option  value="flag">Bayrak resmini göster</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3" for="LangCode">1. Renk</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" data-control="hue" id="Color1" ng-model="themeSetting.Color1">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3" for="LangCode">2. Renk</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" data-control="hue" id="Color2" ng-model="themeSetting.Color2">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3" for="LangCode">3. Renk</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" data-control="hue" id="Color3" ng-model="themeSetting.Color3">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3" for="LangCode">4. Renk</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" data-control="hue" id="Color4" ng-model="themeSetting.Color4">
                        </div>
                    </div>
                    @*<div class="form-group row">
                        <label class="col-sm-3" for="LangCode">Yazı Tipi CDN</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" ng-model="themeSetting.FontCDN"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3" for="LangCode">Yazı Tipi</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" ng-model="themeSetting.FontFamily"></textarea>
                        </div>
                    </div>*@

                    <div class="form-group mb-0 row">
                        <div class="col-sm-12 text-right">
                            <button type="button" class="btn btn-success" ng-click="saveThemeSetting()">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section PageLevelStyles{
    <link href="~/Content/Admin/vendors/jquery-minicolors/jquery.minicolors.css" rel="stylesheet" />
}
@section PageLevelScripts
{
    <script src="~/Content/Admin/vendors/jquery-minicolors/jquery.minicolors.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Admin/setting.js?@HttpContext.Current.Application["JSVer"]" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}

