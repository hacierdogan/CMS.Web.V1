
@{
    ViewBag.Title = "AdminPanel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content fade-in-up" ng-controller="homeController">
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <a href="/admin/slider">
                <div class="ibox bg-success color-white widget-stat">
                    <div class="ibox-body">
                        <h2 class="m-b-5 font-strong">{{dashboard.Slider}}/{{dashboard.SliderAll}}</h2>
                        <div class="m-b-5">SLİDER</div><i class="fa fa-play-circle-o widget-stat-icon"></i>
                        <!--<div><i class="fa fa-level-up m-r-5"></i><small>25% higher</small></div>-->
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a href="/admin/content?page=Blog">
                <div class="ibox bg-info color-white widget-stat">
                    <div class="ibox-body">
                        <h2 class="m-b-5 font-strong">{{dashboard.Blog}}/{{dashboard.BlogAll}}</h2>
                        <div class="m-b-5">BLOG & HABER</div><i class="fa fa-newspaper-o widget-stat-icon"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a href="/admin/ourservice">
                <div class="ibox bg-warning color-white widget-stat">
                    <div class="ibox-body">
                        <h2 class="m-b-5 font-strong">{{dashboard.Service}}/{{dashboard.ServiceAll}}</h2>
                        <div class="m-b-5">HİZMET</div><i class="fa fa-bullhorn widget-stat-icon"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a href="/admin/message">
                <div class="ibox bg-danger color-white widget-stat">
                    <div class="ibox-body">
                        <h2 class="m-b-5 font-strong">{{dashboard.Message}}/{{dashboard.MessageAll}}</h2>
                        <div class="m-b-5">MESAJ</div><i class="fa fa-envelope-o widget-stat-icon"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-8">
            <div class="ibox">
                <div class="ibox-head">
                    <div class="ibox-title">Görevler</div>
                    <div>
                        <span class="btn btn-info btn-xs" ng-click="newMission()"><i class="fa fa-plus-square"></i> Yeni Görev</span>
                    </div>
                </div>
                <div class="ibox-body">
                    <ul class="list-group list-group-divider list-group-full tasks-list">
                        <li ng-repeat="mission in missionList" class="list-group-item task-item">
                            <div>
                                <label class="ui-checkbox ui-checkbox-gray ui-checkbox-success">
                                    <input type="checkbox" ng-click="updateMission(mission,0)" ng-checked="mission.Status==1">
                                    <span class="input-span"></span>
                                    <span class="task-title">{{mission.Description}}</span>
                                </label>
                                <span class="badge badge-warning m-l-5 p-l-5 p-r-5 p-xl-0" style="font-size: 10px;">{{mission.TimeStr}}</span>
                            </div>
                            <div class="task-actions">
                                <a ng-click="updateMission(mission,1)" href="javascript:;"><i class="fa fa-trash text-muted"></i></a>
                            </div>

                        </li>
                    </ul>
                    <p ng-if="missionList.length==0" class="text-danger">Tanımlı görev bulunamadı.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="ibox">
                <div class="ibox-head">
                    <div class="ibox-title">Lisans</div>
                </div>
                <div class="ibox-body">
                    <ul class="media-list media-list-divider m-0">
                        <li class="media" ng-repeat="webInfo in webInfoList">
                            <div class="media-body">
                                <div class="media-heading">
                                    {{webInfo.Title}}
                                    <span class="font-16 float-right">{{webInfo.DateStr}}</span>
                                </div>
                                <div class="font-13">{{webInfo.DayStr}}</div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>


@section PageLevelStyles{

}
@section PageLevelScripts
{
    <script src="~/Scripts/Admin/home.js?@HttpContext.Current.Application["JSVer"]" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}

